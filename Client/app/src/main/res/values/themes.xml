<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cybertech" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/secondary</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.Cybertech.NoActionBar" parent="Theme.Cybertech">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Cybertech.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Cybertech.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button.ciuc" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/ciuc</item>
    </style>
</resources>