<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/oneLineRequestLayout">

    <RelativeLayout
        android:id="@+id/list_proto"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/radius_cards"
        android:backgroundTint="@color/teal_700"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/title_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="13dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/location_request"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_request"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="39dp"
            android:layout_toStartOf="@+id/date_request"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/date_request"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_request"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="21dp"
            android:textColor="#000000" />
    </RelativeLayout>

</RelativeLayout>