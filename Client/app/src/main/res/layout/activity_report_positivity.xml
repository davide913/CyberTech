<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gestione_covid.ReportPositivityActivity">

    <View
        android:id="@+id/view_reportPositivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/GhostWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_sendSign"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ciuc"
        android:clickable="false"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll|snap"
        app:title="@string/Sezione_covid"
        app:titleTextColor="@color/grigio_mask" />

    <EditText
        android:id="@+id/EditText_insertName"
        android:layout_width="292dp"
        android:layout_height="48dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/background_field"
        android:hint="@string/name2"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_sendSign"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/editText_insertSurname"
        android:layout_width="292dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/background_field"
        android:hint="@string/surname2"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="@+id/EditText_insertName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/EditText_insertName"
        app:layout_constraintTop_toBottomOf="@+id/EditText_insertName"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/editText_insertDate"
        android:layout_width="292dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/background_field"
        android:hint="@string/date"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="@+id/editText_insertSurname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText_insertSurname"
        app:layout_constraintTop_toBottomOf="@+id/editText_insertSurname"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/button_sendSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_sign"
        android:backgroundTint="@color/ciuc"
        app:layout_constraintBottom_toBottomOf="@+id/view_reportPositivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_insertDate" />


</androidx.constraintlayout.widget.ConstraintLayout>