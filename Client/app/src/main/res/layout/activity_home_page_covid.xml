<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gestione_covid.HomePage"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/viola_mask"
        app:layout_constraintBottom_toTopOf="@+id/viewPager_covid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_covid_homepage"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/ciuc"
            android:clickable="false"
            android:textAlignment="center"
            android:theme="?attr/actionBarTheme"
            app:autoSizeTextType="uniform"
            app:layout_scrollFlags="scroll|snap"
            app:title="@string/Sezione_covid"
            app:titleTextColor="@color/grigio_mask" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/horyzontal_navbar_toolbar_covid"
            android:layout_width="401dp"
            android:layout_height="wrap_content"
            android:background="@color/viola_mask"
            app:layout_collapseMode="pin"
            app:title="@string/covid_section">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabella_covid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/viola_mask"
                android:padding="0dp"
                app:tabIndicatorColor="@color/grigio_mask"
                app:tabTextColor="@color/white">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/manifest_pos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/manifest_posotivity"
                    android:textAlignment="center" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/manifest_neg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/manifest_negativity"
                    android:textAlignment="center" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reports_received"
                    android:textAlignment="center" />

            </com.google.android.material.tabs.TabLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_covid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2"
        tools:ignore="SpeakableTextPresentCheck" >

    </androidx.viewpager.widget.ViewPager>

</androidx.constraintlayout.widget.ConstraintLayout>