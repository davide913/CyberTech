<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_ManifestPositivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightSteelBlue"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".gestione_covid.ManifestPositivityActivity"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".gestione_covid.HomePage">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_ManifestPositivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/CadetBlue"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/Sezione_covid"
            app:titleTextColor="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView_ManifestPositivity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginStart="0dp"
        android:background="@color/CadetBlue"
        android:visibility="visible"
        app:headerLayout="@layout/navigation_header"
        app:itemIconPadding="15dp"
        app:itemIconSize="25dp"
        app:itemIconTint="@color/Gainsboro"
        app:itemTextColor="@color/Gainsboro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/navigation_menu_homepage_covid"/>

</androidx.drawerlayout.widget.DrawerLayout>