<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gestione_covid.ManifestPositivityFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/GhostWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView_nome"
            android:layout_width="99dp"
            android:layout_height="35dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="300dp"
            android:text="@string/name"
            android:textColor="#616161"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_cognome"
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:layout_marginTop="24dp"
            android:text="@string/surname"
            android:textColor="#616161"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_nome" />

        <TextView
            android:id="@+id/textView_dateAlert"
            android:layout_width="121dp"
            android:layout_height="31dp"
            android:layout_marginTop="24dp"
            android:text="@string/date_alert"
            android:textColor="#616161"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.096"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/textView_cognome" />

        <TextView
            android:id="@+id/textView_stateAlert"
            android:layout_width="125dp"
            android:layout_height="28dp"
            android:layout_marginTop="24dp"
            android:text="@string/state_alert"
            android:textColor="#616161"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.097"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/textView_dateAlert" />

        <TextView
            android:id="@+id/textView_nome2"
            android:layout_width="99dp"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="300dp"
            android:text="@string/nulls"
            android:textColor="#616161"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_cognome2"
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:layout_marginTop="24dp"
            android:text="@string/nulls"
            android:textColor="#616161"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.324"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_nome" />

        <TextView
            android:id="@+id/textView_dateAlert2"
            android:layout_width="216dp"
            android:layout_height="29dp"
            android:layout_marginTop="24dp"
            android:text="@string/no_sign"
            android:textColor="#616161"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/textView_cognome" />

        <TextView
            android:id="@+id/textView_stateAlert2"
            android:layout_width="218dp"
            android:layout_height="28dp"
            android:layout_marginTop="24dp"
            android:text="@string/no_sign"
            android:textColor="#616161"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.808"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/textView_dateAlert" />

        <Button
            android:id="@+id/manifestPosButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Teal"
            android:backgroundTint="@color/ciuc"
            android:drawableTint="@color/ciuc"
            android:text="@string/manifest_posotivity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.885"
            app:strokeColor="@color/ciuc" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="349dp"
            android:layout_height="418dp"
            android:layout_marginStart="212dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/covid_man"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="ImageContrastCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>