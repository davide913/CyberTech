<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.unive.cybertech">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cybertech">
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.Cybertech.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".noleggio.ProductDetails"
            android:exported="true" />
        <activity
            android:name=".noleggio.AddProductForRent"
            android:exported="true" />
        <activity
            android:name=".gestione_covid.ReportPositivityActivity"
            android:exported="false"
            android:theme="@style/Theme.Cybertech.NoActionBar" />
        <activity
            android:name=".assistenza.MyProfile"
            android:exported="false"
            android:theme="@style/Theme.Cybertech.NoActionBar" />
        <activity
            android:name=".assistenza.MyRequests"
            android:exported="false"
            android:theme="@style/Theme.Cybertech.NoActionBar" />
        <activity
            android:name=".assistenza.RequestDetails"
            android:exported="false"
            android:theme="@style/Theme.Cybertech.NoActionBar" />
        <activity
            android:name=".assistenza.RequestViz"
            android:exported="false"
            android:theme="@style/Theme.Cybertech.NoActionBar" />
        <activity
            android:name=".assistenza.TakenRequests"
            android:exported="false"
            android:theme="@style/Theme.Cybertech.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Cybertech.NoActionBar" />

        <service android:name=".gestione_covid.services.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>